@main.hzero  = addrSpace(12) ui32, !"istream", !"CONT", !0, !"strobj_hzero" 
@main.eta    = addrSpace(12) ui32, !"istream", !"CONT", !0, !"strobj_eta  " 
@main.etan   = addrSpace(12) ui32, !"istream", !"CONT", !0, !"strobj_etan " 
